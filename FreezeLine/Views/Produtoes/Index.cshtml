@section scripts {
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.fixedheadertable.js"></script>

    <script type="text/javascript">

        $('.table').fixedHeaderTable({
            footer: true,
            cloneHeadToFoot: false,
            altClass: 'odd',
            autoShow: true
        });

    </script>

}

@model IEnumerable<FreezeLine.Models.Produto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="heightPage">

    <table class="table fancyTable" id="tableid">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Apelido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PesoLiquido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ativo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ipi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QtdUnid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RefAuxiliarProduto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QtUnPorUnArmz)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PesoLiquidoCalc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemStru)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CustODirTotal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CstMatUltmEtapa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CstMatEtapa1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CstMatEtapa2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CstMatEtapa3)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CstTotMaterial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CustoDirMod)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HorasModUltmEtapa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HorasModEtapa1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HorasModEtapa2)
                </th>
                <th></th>

            </tr>

        </thead>

        <tbody>

            @{
                int i = 0;
            }

            @foreach (var item in Model)
            {

                if (i++ > 10)
                {
                    break;
                }

                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Apelido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PesoLiquido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ativo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ipi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QtdUnid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RefAuxiliarProduto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QtUnPorUnArmz)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PesoLiquidoCalc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemStru)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustODirTotal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CstMatUltmEtapa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CstMatEtapa1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CstMatEtapa2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CstMatEtapa3)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CstTotMaterial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustoDirMod)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HorasModUltmEtapa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HorasModEtapa1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HorasModEtapa2)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </tbody>

    </table>

</div>


